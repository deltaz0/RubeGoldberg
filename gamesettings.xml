<?xml version="1.0"?>
<!-- Game settings -->

  <settings>
    <game name="CSCE 4250 Homework: Rube Goldberg Machine" />
    <renderer width="1024" height="768" />

    <!-- image file names -->
    <images>
      <image name="background" src="Images\\background.png" />
    </images>

    <!-- sprites -->
    <sprites>
      <sprite name="ball" file="Images\\cannonball.png"/>
      <sprite name="domino" file="Images\\domino.png"/>
      <sprite name="button" file="Images\\button1.png"/>
      <sprite name="springlever" file="Images\\springlever.png"/>
      <sprite name="springleverflip" file="Images\\springleverflip.png"/>
      <sprite name="predeto" file="Images\\predeto.png"/>
      <sprite name="postdeto" file="Images\\postdeto.png"/>
      <sprite name="fuseunlit" file="Images\\fuseunlit.png"/>
      <sprite name="fuselit" file="Images\\fuselit.png"/>
      <sprite name="tnt" file="Images\\tnt.png"/>
      <sprite name="explosion" file="Images\\explosion.png"/>
      <sprite name="rope" file="Images\\rope.png"/>
      
      
      <sprite name="whitestar" file="Images\\whitestar.png"/>
      <sprite name="yellowstar" file="Images\\yellowstar.png"/>
      <sprite name="bluestar" file="Images\\bluestar.png"/>
      <sprite name="redstar" file="Images\\redstar.png"/>
      <sprite name="magentastar" file="Images\\magentastar.png"/>
    </sprites>


  <!-- sound -->
  <!-- "cps" is number of channels per sound, 1 for mono, 2 for stereo -->
  <!-- "bps" is number of bits per sample, usually 8 or 16 -->
  <!-- "rate" is sample rate -->

  <sound cps="1" bps="16" rate="22050"/>

  <sounds level="0">
    <sound file="Sounds\\thump2.wav" copies="8"/>
    <sound file="Sounds\\tick.wav" copies="8"/>
    <sound file="Sounds\\yay.wav" copies="1"/>
    <sound file="Sounds\\bleep.wav" copies="4"/>
    <sound file="Sounds\\boing.wav" copies="1"/>
    <sound file="Sounds\\boom.wav" copies="1"/>
    <sound file="Sounds\\clip.wav" copies="1"/>
    <sound file="Sounds\\fuse.wav" copies="1"/>
  </sounds>
  

  <!-- debugger settings -->

  <debug linenumber="1" header="1">
    <file select="1" name="debug.txt"/>
    <debugger select="1"/>
    <ip select="1" address="127.0.0.1" port="1617"/>
  </debug>

</settings>
